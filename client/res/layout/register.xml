<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@layout/login_background">
    <!-- padding 内边距   layout_margin 外边距
  		android:layout_alignParentTop 布局的位置是否处于顶部 -->
  		
  	<RelativeLayout 
  	    android:id="@+id/register_div"
  	    android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:padding="15dip"        
	  	android:layout_margin="15dip" 
	  	android:background="@layout/register_background_div" >
  		<!-- 账号 -->
	  	<TextView 
	  		android:id="@+id/login_user_input"
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  		android:layout_alignParentTop="true"
	  		android:layout_marginTop="5dp"
	  		android:text="账号"/>
	  	<EditText 
	  		android:id="@+id/username_edit"
	  		android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:hint="用户名"
	  		android:layout_below="@id/login_user_input"
	  		android:singleLine="true"
	  		android:inputType="text"/>
	    <!-- 密码 text -->
	    <TextView 
	    	android:id="@+id/register_password_input"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@id/username_edit"
	    	android:layout_marginTop="3dp"
	    	android:text="密码"/>
	    <EditText 
	    	android:id="@+id/register_password_edit"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@id/register_password_input"
	    	android:password="true"
	    	android:singleLine="true"
	    	android:inputType="textPassword" />
	    <TextView 
	    	android:id="@+id/register_password_input_again"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@id/register_password_edit"
	    	android:layout_marginTop="3dp"
	    	android:text="再次输入密码"/>
	    <EditText 
	    	android:id="@+id/register_password_edit_again"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@id/register_password_input_again"
	    	android:password="true"
	    	android:singleLine="true"
	    	android:inputType="textPassword" />
	    <!-- 登录button -->
	    <Button 
	    	android:id="@+id/register_button"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@id/register_password_edit_again"
	    	android:text="注册"/>
  	</RelativeLayout>

</LinearLayout>
